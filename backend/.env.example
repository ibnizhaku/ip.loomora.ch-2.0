# Database
DATABASE_URL="postgresql://loomora:loomora_secret@localhost:5432/loomora?schema=public"

# Server
PORT=3001
HOST=0.0.0.0

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-min-32-characters-long
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# CORS
CORS_ORIGIN=http://localhost:5173

# Environment
NODE_ENV=development

# Frontend URL (for checkout redirects, payment-pending)
LOOMORA_FRONTEND_URL=http://localhost:5173
# or: FRONTEND_URL=http://localhost:5173

# Skip payment for dev/demo (company activated immediately on register)
LOOMORA_SKIP_PAYMENT=false

# Zahls.ch payment provider
ZAHLS_API_KEY=
ZAHLS_API_URL=https://api.zahls.ch/v2
ZAHLS_WEBHOOK_SECRET=

# Admin User (for seeding)
ADMIN_EMAIL=admin@loomora.ch
ADMIN_PASSWORD=Admin123!
